{
    "$schema": "https://raw.githubusercontent.com/PowerShell/DSC/main/schemas/2024/04/bundled/resource/manifest.json",
    "type": "DSC.PackageManagement/Yum",
    "description": "DSC resource to manage Yum packages",
    "tags": [
        "Linux",
        "yum",
        "PackageManagement"
    ],
    "version": "0.1.0",
    "get": {
        "executable": "yum.dsc.resource.sh",
        "args": [
            "get"
        ],
        "input": "env"
    },
    "set": {
        "executable": "yum.dsc.resource.sh",
        "args": [
            "set"
        ],
        "input": "env",
        "implementsPretest": true
    },
    "export": {
        "executable": "yum.dsc.resource.sh",
        "args": [
            "export"
        ],
        "input": "env"
    },
    "exitCodes": {
        "0": "Success",
        "1": "Invalid parameter"
    },
    "schema": {
        "embedded": {
            "$schema": "http://json-schema.org/draft-07/schema#",
            "$id": "https://raw.githubusercontent.com/PowerShell/DSC/main/schemas/resources/DSC/PackageManagement/Yum/v0.1.0/schema.json",
            "title": "Yum",
            "description": "Managed packages using yum",
            "type": "object",
            "required": [
                "packageName"
            ],
            "additionalProperties": false,
            "properties": {
                "packageName": {
                    "type": "string",
                    "title": "Package Name",
                    "description": "Defines the name of the package to query or install"
                },
                "version": {
                    "type": "string",
                    "title": "Version",
                    "description": "Defines the version of the package to install"
                },
                "Source": {
                    "type": "string",
                    "title": "Source",
                    "description": "Defines the source of the package"
                },
                "_exist": {
                    "type": "boolean",
                    "title": "Exist",
                    "description": "Defines if the package should exist or not"
                }
            }
        }
    }
}
